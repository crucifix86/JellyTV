                    CornerRadius="12"
                    Padding="60"
                    MaxWidth="1000"
                    MaxHeight="700"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid RowDefinitions="Auto,*,Auto">
                    <!-- Header -->
