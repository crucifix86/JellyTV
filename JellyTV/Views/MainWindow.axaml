                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,30"/>

                    <!-- Video Output List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Name="VideoOutputList" Spacing="12"/>
                    </ScrollViewer>

                    <!-- Back Button -->
                    <Button Grid.Row="2"
                            Name="CloseVideoOutputButton"
                            Content="Back to Settings"
                            HorizontalAlignment="Center"
                            FontSize="28"
                            Padding="40,15"
                            Margin="0,30,0,0"
                            Focusable="True"
                            IsTabStop="True"/>
                </Grid>
            </Border>
        </Border>

        <!-- Bluetooth Pairing Overlay -->
        <Border Name="BluetoothPairOverlay"
                IsVisible="False"
                Background="#DD000000">
            <Border Background="#FF1A1A1A"
                    CornerRadius="12"
                    Padding="60"
                    MaxWidth="1000"
                    MaxHeight="700"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Grid RowDefinitions="Auto,Auto,*,Auto">
                    <!-- Header -->
                    <TextBlock Grid.Row="0"
                              Text="Pair Bluetooth Device"
                              FontSize="38"
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>

                    <!-- Status Text -->
                    <TextBlock Grid.Row="1"
                              Name="BluetoothScanStatus"
                              Text="Scanning for devices..."
                              FontSize="20"
                              Foreground="#FFAAAAAA"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>

                    <!-- Device List -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <StackPanel Name="BluetoothDeviceList" Spacing="12"/>
                    </ScrollViewer>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,30,0,0">
                        <Button Name="RefreshBluetoothButton"
                                Content="Refresh Scan"
                                FontSize="24"
                                Padding="30,12"
                                Focusable="True"
                                IsTabStop="True"/>
                        <Button Name="CloseBluetoothPairButton"
                                Content="Back to Settings"
                                FontSize="24"
                                Padding="30,12"
                                Focusable="True"
                                IsTabStop="True"/>
                    </StackPanel>
                </Grid>
            </Border>
