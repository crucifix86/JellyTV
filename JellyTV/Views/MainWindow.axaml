                                                  TextAlignment="Center"/>
                                        <TextBlock Text="Direct Play"
                                                  FontSize="18"
                                                  Foreground="#FF00FF00"
                                                  TextAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

    </Grid>

</Window>
